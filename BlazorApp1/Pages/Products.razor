@page "/products"

<h1>Produtos</h1>
<hr />
<br />

<style>
    .cardContainer {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        padding: 30px;
    }

    .card {
        width: 30%;
        padding: 30px;
        text-align: center;
        margin-bottom: 20px;
        box-shadow: 2px 2px 2px lightgrey;
    }

    .main {
        background-color: whitesmoke;
    }

    #btnSelect {
        color: white;
        border: none !important;
        background-color: indianred;
        border-radius: 10px;
        padding: 10px;
    }

    #btnSelect:hover {
        transform: scale(1.05);
        background-color: darkred;
    }
</style>


@if (stockPositions == null)
{
    <p><em>Carregando produtos...</em></p>
}
else
{
    <div class="cardContainer">
        @for (int i = 0; i <= NumRows; i++)
        {
            for (int j = 0; j <= NumColumns; j++)
            {
                var position = stockPositions.FirstOrDefault(s => s.Column == j && s.Row == i);

                if(position != null)
                {
                    <div class="card">
                        <h3>@position.Product.Name</h3>
                        <p>@position.Quantity</p>
                        <button id="btnSelect" @onclick="@(e => SelectProduct(position.StockPositionId))">Selecionar</button>
                    </div>
                }
            }
        }
    </div>
}